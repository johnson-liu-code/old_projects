   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "\n",
    "r1 = np.linspace(0, 4, 1000)\n",
    "x1 = np.exp((-r1**2) / 2) / (2*np.pi)**(3/2)\n",
    "y1 = np.multiply(r1**2, x1)\n",
    "\n",
    "%matplotlib inline\n",
    "# plt.plot(r1, y1)\n",
    "\n",
    "dim = 3\n",
    "dt = 1e-2\n",
    "E_t = 3./2\n",
    "num_bins = 10\n",
    "N_T = 3\n",
    "rMax = 4\n",
    "timeSteps = 1\n",
    "\n",
    "def V(r):\n",
    "    rSqd = 0\n",
    "    for d in range(dim):\n",
    "        rSqd += r[d] * r[d]\n",
    "    \n",
    "    return rSqd / 2\n",
    "\n",
    "def zeroAccumulators():\n",
    "    Esum, ESqdSum = 0, 0\n",
    "    psi = np.zeros(num_bins)\n",
    "\n",
    "    return Esum, ESqdSum, psi\n",
    "\n",
    "def initialize():\n",
    "    N = N_t\n",
    "    r = [ np.random.uniform(0, 1, dim) - .5 for n in range(N_t)]\n",
    "    \n",
    "    alive = [True for n in range(N_t)]\n",
    "    \n",
    "    Esum, ESqdSum, psi = zeroAcumulators()\n",
    "    E_T = 0\n",
    "    \n",
    "    return r, alive, E_T\n",
    "\n",
    "def oneMonteCarloStep(r, alive, n, N, E_T):\n",
    "    for d in range(dim):\n",
    "        r[n][d] += np.random.normal(0, 1)\n",
    "    \n",
    "    q = np.exp(-dt * (V(r[n]) - E_T))\n",
    "    survivors = int(q)\n",
    "    \n",
    "    if q - survivors > np.random.uniform(0, 1):\n",
    "        survivors += 1\n",
    "    \n",
    "    for s in range(survivors):\n",
    "        r.append( np.zeros(dim) )\n",
    "        for d in range(dim):\n",
    "            r[N][d] = r[n][d]\n",
    "        alive.append(True)\n",
    "        N += 1\n",
    "        \n",
    "    if survivors == 0:\n",
    "        alive[n] = False\n",
    "\n",
    "    return r, alive\n",
    "\n",
    "def oneTimeStep(r, alive, N, psi, E_T, ESum, ESqdSum):\n",
    "    for n in range(N):\n",
    "        oneMonteCarloStep(r, alive, n, N, E_T)\n",
    "    \n",
    "    r = [ind for c, ind in enumerate(r) if alive[c] == True]\n",
    "    N = len(r)\n",
    "    \n",
    "    E_T += np.log(N_T / float(N)) / 10\n",
    "    ESum += E_T\n",
    "    ESqdSum += E_T**2.\n",
    "    \n",
    "    for n in range(N):\n",
    "        rSqd = 0\n",
    "        for d in range(dim):\n",
    "            rSqd += r[n][d]**2.\n",
    "        i = int(rSqd**.5 / rMax * num_bins)\n",
    "        if i < num_bins:\n",
    "            psi[i] += 1\n",
    "    \n",
    "    return r, alive, N, psi, ESum, ESqdSum\n",
    "    \n",
    "def run_monte_carlo():\n",
    "    r, alive, E_T = initialize()\n",
    "    N = len(r)\n",
    "    \n",
    "    ESum, ESqdSum, psi = zeroAccumulators()\n",
    "\n",
    "    for t in range(timeSteps):\n",
    "        r, alive, N, psi, ESum, ESqdSum = oneTimeStep(r, alive, N, psi, E_T, ESum, ESqdSum)\n",
    "    \n",
    "    print('finish 1')\n",
    "    \n",
    "    EAve = ESum / timeSteps\n",
    "    EVar = ESqdSum / timeSteps - EAve**2\n",
    "    \n",
    "    psiNorm, psiExactNorm = 0, 0\n",
    "    \n",
    "    dr = rMax / num_bins\n",
    "    \n",
    "    for i in range(num_bins):\n",
    "        r = i * dr\n",
    "        psiNorm += r**dim * psi[i]**2\n",
    "        psiExactNorm += r**dim * np.exp(-r**2)\n",
    "    \n",
    "    print('finish 2')\n",
    "    \n",
    "    psiNorm = psiNorm**.5\n",
    "    psiExactNorm = psiExactNorm**.5\n",
    "\n",
    "    for i in range(num_bins):\n",
    "        r = i * dr\n",
    "        psi = r**dim * psi[i] / psiNorm\n",
    "        psiExact = r**dim * np.exp(-r**2) / psiExactNorm\n",
    "        print('{}    {}    {}'.format(r, psi, psiExact))\n",
    "    \n",
    "    return r, psi, psiExact\n",
    "    \n",
    "r, psi, psiExact = run_monte_carlo()\n",
    "# print(r)"
   ]
  }
